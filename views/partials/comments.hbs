

{{#each comments}}
<div class="ui segment centered comments">
  <div class="comment">
    <a class="avatar">
      <img class="ui tiny image"src={{profile}} style="width: 50px; height: 50px; object-fit: cover;" >
    </a>
    <div class="content">
      <a class="author">{{fullname}}</a>
      <div class="metadata">
        <div class="date">{{timeSince date}}</div>
      </div>
      <div class="text">
        <p>
          {{comment}}
        </p>
      </div>
    </div>
  </div>

</div>
  {{/each}}

