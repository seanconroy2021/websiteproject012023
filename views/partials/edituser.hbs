
<!-- https://semantic-ui-forest.com/templates/semantic-ui/login -->
 <style type="text/css">
      body {
        background-color: #dadada;
        -webkit-font-smoothing: antialiased;
        -moz-font-smoothing: grayscale;
      }

      body > .ui.grid {
        height: 100%;
      }

      .column {
        max-width: 450px;
      }
</style>


    <div class="ui middle aligned center aligned grid">
      <div class="column">
        <h2 class="ui inverted center aligned header">
          <img class="image" src="https://cdn.glitch.global/7a6aee71-7259-46fe-b58f-b60891ace950/79a1a9fb-f4cb-495b-99cf-97eb8d24e974.image.png?v=1678188906814" /> Edit {{fullname}} Account
        </h2>
        <div class="ui cotainer center aligned compact message">
  <p>Please note after any changes you will be redircted to the login page where you can input your new details. Note Keeper now allow you {{fullname}}, to update your info without losing any of your content. </p>
</div>
        
        <form class="ui  large form" action="/settings/updateuser" method="POST" enctype="multipart/form-data" >
          <div class="ui stacked segment">
            <div class=" two fields">
                   <div class="field">
      <label for="firstName">First Name</label>
      <input placeholder="{{firstName}}" type="text"  name="firstName" autofocus required>
    </div>
    <div class="field">
      <label for="lastName">Last Name</label>
      <input placeholder="{{lastName}}" type="text"  name="lastName" required>
    </div>
            </div>
              <div class="field">
    <label for="email">Email</label>
    <input placeholder="{{email}}" type="text" name="email" required>
  </div>
 <div class="field">
    <label>Profile Pic</label>
    <input placeholder="Image" type="file" name="profilepic" required>
</div>
            
  <div class="field">
    <label for="password">Password</label>
    <input placeholder="{{password }}" type="password" name="password" required>
  </div>
            
            
            <button class="ui black submit button">Update</button>
          </div>
          <div class="ui error message"></div>
        </form>
      </div>
    </div>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.3.3/semantic.min.js"></script>
    <script>
      $(document).ready(function() {
        $(".ui.form").form({
          fields: {
            email: {
              identifier: "email",
              rules: [
                {
                  type: "empty",
                  prompt: "Please enter your e-mail"
                },
                {
                  type: "email",
                  prompt: "Please enter a valid e-mail"
                }
              ]
            },
            password: {
              identifier: "password",
              rules: [
                {
                  type: "empty",
                  prompt: "Please enter your password"
                },
                {
                  type: "length[6]",
                  prompt: "Your password must be at least 6 characters"
                }
              ]
            }
          }
        });
      });
    </script>
